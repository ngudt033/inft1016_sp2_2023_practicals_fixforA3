<script>

    const StoredTheme = localStorage.getItem("ThemePrefe");
    if (StoredTheme){
        document.documentElement.setAttribute("data-theme", StoredTheme)
    }

    const StoreName = localStorage.getItem("Username");
    if (StoreName){
        document.getElementById('header').innerHTML = "Greetings " + StoreName;
    }

    function SwitchImage(imageUrl, text){
        var mainImage = document.getElementById('mainImage')
        var takenby = document.getElementById('takenby')

        mainImage.src = imageUrl;
        takenby.innerText = text;

    } 
    function Toggledifftheme(){
        var PresentTheme = document.documentElement.getAttribute("data-theme");
        var DiffTheme = "light";
        if (PresentTheme == "dark"){
            DiffTheme = "light";
        } else {
            DiffTheme = "dark";
        }
        document.documentElement.setAttribute("data-theme", DiffTheme)
        localStorage.setItem("ThemePrefe", DiffTheme);

        }
    
    function DatesTime(){
        var CurrentDate = new Date();
        var DateTime = document.getElementById("CurrentDateAndTime");
        DateTime.innerHTML = CurrentDate;
    }
    window.onload = DatesTime;

    function InputName(){
        var Name = document.getElementById("NameInput").value;
        document.getElementById("header").innerHTML = ("Good afternoon " + Name)

        localStorage.setItem("Username", Name);
    }

</script>

    <header>
        <h1 id = "MainHeader">THE EFFECT OF AI ON SMALL BUSINESSES 
AND THE ROLE I WANT TO PURSUE AS A DATA ENGINEER
</h1>
        <button onclick = "Toggledifftheme()"> Toggle Theme</button>
    </header>
