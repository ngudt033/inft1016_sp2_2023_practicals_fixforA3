    <link rel="stylesheet" href="base.css">
   
    <script>
        function SwitchImage(imageUrl, text){
            var mainImage = document.getElementById('mainImage')
            var takenby = document.getElementById('takenby')

            mainImage.src = imageUrl;
            takenby.innerText = text;

        } 
        function Toggledifftheme(){
            const body = document.body;
            if(body.getAttribute("data-theme")=="dark") {
                body.removeAttribute("data-theme");
            } else {
                body.setAttribute("data-theme", "dark");
            }
        }
        function DisplayTime(){
            var dateTime = document.getElementById('datetime');
            var currentDateTime = new Date().toLocaleString();
            dateTime.innerText=currentDateTime;
        }
        DisplayTime();     

        function submitForm(){
            var product = document.getElementById("inp").value;
            document.getElementById("MainHeader").innerHTML = ("Hello " + product)
          }

    </script>
</head>
